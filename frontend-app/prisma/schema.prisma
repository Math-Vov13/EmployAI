generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  role      UserRole @default(USER)
  status    UserStatus @default(ONLINE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  documents Document[]
  sessions  Session[]

  @@map("users")
}

// Document model
model Document {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  fileUrl     String
  fileKey     String         @unique
  fileName    String
  fileSize    Int
  mimeType    String
  status      DocumentStatus @default(PENDING)
  uploadedById String        @db.ObjectId
  uploadedBy  User           @relation(fields: [uploadedById], references: [id], onDelete: Cascade)
  tags        String[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([status])
  @@index([uploadedById])
  @@index([tags])
  @@map("documents")
}

// Tag model for predefined tags
model Tag {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  createdAt DateTime @default(now())

  @@map("tags")
}

// OTP model for email verification
model OTP {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email, verified])
  @@index([expiresAt])
  @@map("otps")
}

// Session model for BetterAuth integration
model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
  @@map("sessions")
}

// Enums
enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ONLINE
  OFFLINE
  STANDBY
}

enum DocumentStatus {
  ONLINE
  PENDING
  DELETED
}
